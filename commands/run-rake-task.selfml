(trigger
    (key [[ctrl][shift]R]))

(name [Run Rake Task])

(only-in source.ruby)

(input nothing)

(output html)

(save nothing)

(script [export RUBYLIB="$TM_BUNDLE_SUPPORT/RakeMate${RUBYLIB:+:$RUBYLIB}"
export TM_RUBY=$(which "${TM_RUBY:-ruby}")
export TM_RAKE=$(which "${TM_RAKE:-rake}")

"${TM_RUBY}" -- "$TM_BUNDLE_SUPPORT/RakeMate/rake_mate.rb"
])